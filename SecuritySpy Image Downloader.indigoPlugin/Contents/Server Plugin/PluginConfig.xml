<?xml version="1.0"?>
<PluginConfig>
	<SupportURL>https://github.com/mlamoure/</SupportURL>

			<Field id="ip" type="textfield" defaultValue="127.0.0.1">
				<Label>SecuritySpy IP:</Label>
			</Field>

			<Field id="port" type="textfield" defaultValue="8007">
				<Label>SecuritySpy Port (http only):</Label>
			</Field>

			<Field id="login" type="textfield" defaultValue="">
				<Label>SecuritySpy login:</Label>
			</Field>

			<Field id="password" type="textfield" defaultValue="">
				<Label>SecuritySpy password:</Label>
			</Field>

			<Field hidden="false" type="checkbox" id="debug"><Label>Debug (will produce a lot of log data)</Label><Description></Description></Field>

</PluginConfig>
